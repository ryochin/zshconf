# see bash-prompt howto.
function jobcount() {
#        jobs|wc -l| awk '{print $1}'
	echo -n `jobs | wc -l | awk '{print $1}'`
}

functions crontab () {
	if  [ $1 = -r ]; then
		echo -n "Are you sure to delete your crontab ? [y/n] "
		read ANSWER
		case "$ANSWER" in
			y | yes ) command crontab "$1" && echo "deleted." ;;
		esac
	else
		command crontab "$1"
	fi
}

