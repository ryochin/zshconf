function sethome() {
	export MYHOME="`pwd`"
	echo "home: ${MYHOME}"
}

function gohome() {
	chdir "$MYHOME"
}

function load-git-config() {
	source ~/.zsh/zshrc.user.git
}

# https://github.com/m-yamashita/up
function up() {
	cpath=./
	for i in `seq 1 1 $1`; do
		cpath=$cpath../
	done
	cd $cpath
}
